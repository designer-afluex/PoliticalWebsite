@model PoliticalWebsite.Models.Master

@{
    ViewBag.Title = "GalleryimageList";
    Layout = "~/Views/Shared/Admin_LayoutPage.cshtml";
}



<form action="/Master/GalleryimageList" id="form1" method="post">
    <p style="color: red">
        <span style="color:red">@TempData["msg"]</span>
    </p>
    <div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="page-header-title">
                        <h4 class="m-b-10">Gallery image List</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">
                <div class="page-body">
                    <div class="row">
                        <div class="col-md-12">
                            <!-- HTML5 Export Buttons table start -->
                            <div class="card">
                                <div class="card-header table-card-header">
                                    <p style="color: red">

                                    </p>
                                    <a class="btn btn-primary btn-sm" style="margin-left:76%" href="/Master/AddGallery">Add Banner</a>
                                </div>
                                <div class="card-block">
                                    <div class="dt-responsive table-responsive">
                                        <table id="basic-btn" class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr>
                                                    <th>S No.</th>
                                                    <th>Image</th>

                                                    <th>Discription</th>
                                                    <th>Action</th>
                                                    <th></th>
                                                </tr>

                                            </thead>
                                            <tbody>
                                                @if(Model != null)
                                                {
                                                    if(Model.lstgallery != null)
                                                    {
                                                        int i = 1;
                                                        foreach(var Item in Model.lstgallery)
                                                        {
                                                        <tr>
                                                            <td>@i</td>
                                                           <td>
                                                               <img src=@Html.DisplayFor(m => Item.GalleryImage) alt="Image" style="width:100px;height:80px;border-radius:0px"/>
                                                           </td>

                                                            <td>@Item.Discription</td>
                                                            <td>
                                                               <a class="btn btn-sm btn-info" href="/Master/AddGallery?Id=@Item.Pk_GalleryId">Edit</a>
                                                                <a class="btn btn-sm btn-danger" href="/Master/DeleteGalleryBanner?Id=@Item.Pk_GalleryId" onclick="return confirm('Are you sure you want to delete banner image ?')">Delete</a>
                                                            </td>
                                                            <td></td>
                                                        </tr>
                                                            i = i + 1;
                                                        }
                                                    }
                                                }
                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <th></th>
                                                    <th></th>

                                                    <th></th>
                                                    <th></th>
                                                    <th></th>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

