@model PoliticalWebsite.Models.Home

@{
    ViewBag.Title = "Gallery";
    Layout = "~/Views/Shared/WebsiteLayout.cshtml";
}



@using (Html.BeginForm("Gallery", "Home", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <!-- Page Wrapper -->
    <div class="page-wrapper">

        <!-- Title Bar -->
        <div class="pbmit-title-bar-wrapper">
            <div class="container">
                <div class="pbmit-title-bar-content">
                    <div class="pbmit-title-bar-content-inner">
                        <div class="pbmit-tbar">
                            <div class="pbmit-tbar-inner container">
                                <h1 class="pbmit-tbar-title">हमारी गैलरी</h1>
                            </div>
                        </div>
                        <div class="pbmit-breadcrumb">
                            <div class="pbmit-breadcrumb-inner">
                                <span><a title="" href="/Home/Index" class="home"><span>होम</span></a></span>
                                <span class="sep"><i class="pbmit-base-icon-angle-double-right"></i></span>
                                <span><span class="post-root post post-post current-item">हमारी गैलरी</span></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Title Bar End-->
        <!-- Page Content -->
        <div class="page-content">

            <!-- Our Gallery -->
            <section class="section-lgx section-gallery-bg">
                <div class="container">
                    <div class="row">
                        @if (Model != null)
                        {
                            if (Model.lstgallery != null)
                            {
                                int i = 0;
                                foreach (var item in Model.lstgallery)
                                {
                                    <div class="col-sm-12 col-md-4">

                                        <article class="pbmit-portfolio-style-1">
                                            <div class="pbminfotech-post-content">
                                                <div class="pbmit-featured-wrapper">

                                                    <div class="pbmit-featured-wrapper">
                                                        <img src="@item.GalleryImage" class="img-fluid" alt="" />
                                                    </div>
                                                    <div class="pbminfotech-icon-box pbminfotech-media-link">
                                                        <a class="pbmit-lightbox" href="@item.GalleryImage">
                                                            <i class="pbmit-base-icon-plus"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </article>

                                    </div>
                                    i++;
                                }
                            }
                        }
                      
                    </div>
                </div>
            </section>
            <!-- Our Gallery End -->

        </div>
        <!-- Page Content End -->

    </div>
    <!-- Page Wrapper End -->
}

