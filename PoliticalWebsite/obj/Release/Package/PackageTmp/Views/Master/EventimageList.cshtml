@model PoliticalWebsite.Models.Master

@{
    ViewBag.Title = "EventimageList";
    Layout = "~/Views/Shared/Admin_LayoutPage.cshtml";
}


<form action="/Master/EventimageList" id="form1" method="post">
    <p style="color: red">
        <span style="color:red">@TempData["msg"]</span>
    </p>
    <div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="page-header-title">

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">
                <div class="page-body">
                    <div class="row">
                        <div class="col-md-12">
                            <!-- HTML5 Export Buttons table start -->
                            <div class="card">
                                <div class="card-header d-flex justify-content-between">
                                    <h4>Event Banner Details</h4>
                                    <a class="btn btn-primary btn-sm" style="margin-left:76%" href="/Master/AddEvent"><i class="mdi mdi-plus-circle-outline"></i> Add Event</a>
                                </div>
                                <div class="card-body">
                                    <div class="dt-responsive table-responsive">
                                        <table id="order-listing" class="table table-striped table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>S No.</th>
                                                    <th>Banner</th>
                                                    <th>Description</th>
                                                    <th>City</th>
                                                    <th>Date</th>
                                                    <th>Action</th>
                                                </tr>

                                            </thead>
                                            <tbody>
                                                @if (Model != null)
                                                {
                                                    if (Model.lstevent != null)
                                                    {
                                                        int i = 1;
                                                        foreach (var Item in Model.lstevent)
                                                        {
                                                            <tr>
                                                                <td>@i</td>
                                                                <td>
                                                                    <img src=@Html.DisplayFor(m => Item.EventImage) alt="Image" style="width:100px;height:80px;border-radius:0px" />
                                                                </td>

                                                                <td>@Item.Discription</td>
                                                                <td>@Item.City</td>
                                                                <td>@Item.Date</td>
                                                                <td class="d-flex">
                                                                    <a class="btn btn-sm btn-info" href="/Master/AddEvent?Id=@Item.Pk_EventId">Edit</a>
                                                                    <a class="btn btn-sm btn-danger ml-2" href="/Master/DeleteEventBanner?Id=@Item.Pk_EventId" onclick="return confirm('Are you sure you want to delete banner image ?')">Delete</a>
                                                                </td>
                                                            </tr>
                                                            i = i + 1;
                                                        }
                                                    }
                                                }
                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <th></th>
                                                    <th></th>

                                                    <th></th>
                                                    <th></th>
                                                    <th></th>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


