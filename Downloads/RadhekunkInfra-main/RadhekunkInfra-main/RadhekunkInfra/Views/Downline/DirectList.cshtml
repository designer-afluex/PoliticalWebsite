@model RadhekunkInfra.Models.Reports

@{
    ViewBag.Title = "DirectList";
    Layout = "~/Views/Shared/AssociateLayout.cshtml";
}
@using (Html.BeginForm("DirectList", "Downline", FormMethod.Post, new { @id = "form1" }))
{

    <section class="section">
        <ul class="breadcrumb breadcrumb-style ">
            <li class="breadcrumb-item">
                <a href="#">
                    <i data-feather="home"></i>
                </a>
            </li>
            <li class="breadcrumb-item">Tree</li>
            <li class="breadcrumb-item">Direct List</li>
        </ul>
    </section>

    <div class="section-body">
        <div class="card">
            <div class="card-header">
                <h4>Direct List</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label>  Name </label>
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Leg</label>
                            @Html.DropDownListFor(m => m.Leg, new SelectList(ViewBag.ddlleg, "Value", "Text"), new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Status</label>
                            @Html.DropDownListFor(m => m.Status, new SelectList(ViewBag.ddlStatus, "Value", "Text"), new { @class = "form-control" })
                        </div>
                    </div>
                    </div>
                <div class="row">
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label>From Date  </label>
                            @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label>To Date  </label>
                            @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label>From Activation Date  </label>
                            @Html.TextBoxFor(m => m.FromActivationDate, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label>To Activation Date  </label>
                            @Html.TextBoxFor(m => m.ToActivationDate, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                        
                            <input type="submit" id="btnSearch" class="btn btn-success pull-left" name="Search" value="Search" />
                            <br />
                            <br />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <table id="tableExport" data-page-length='50' class="table table-striped">
                        <thead>
                            <tr>
                                <th>Sr No.</th>

                                <th>LoginId</th>
                                <th>Name</th>
                                <th>Mobile No</th>
                                @*<th>Plot Number</th>*@
                                <th>Leg</th>
                                <th>Joining Date</th>
                                @*<th>Package</th>*@

                                <th>Activation Date</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                        {
                            if (Model.lstassociate != null)
                            {
                                int i = 1;
                                foreach (var Item in Model.lstassociate)
                                {
                                        <tr class="text-left">
                                            <td>@i</td>

                                            <td>@Item.SponsorId</td>
                                            <td>@Item.SponsorName</td>

                                            <td>@Item.Mobile</td>
                                            @*<td>@Item.PlotNumber</td>*@
                                            <td>@Item.Leg</td>
                                            <td>@Item.JoiningDate</td>
                                            @*<td>@Item.Package</td>*@

                                            <td>@Item.PermanentDate</td>
                                            <td>@Item.Status</td>

                                        </tr>
                                    i++;
                                }

                            }
                        }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
}


<script src="../../vendor/jquery/jquery.min.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">
<script>

    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
    });
    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
    });
    $('#FromActivationDate').datepicker({
        dateFormat: 'dd/mm/yy'
    });
    $('#ToActivationDate').datepicker({
        dateFormat: 'dd/mm/yy'
    });
</script>

<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>

