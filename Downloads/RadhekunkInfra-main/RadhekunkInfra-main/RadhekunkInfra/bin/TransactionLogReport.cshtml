@model HMGreenCityCRM.Models.AssociateBooking

@{
    ViewBag.Title = "TransactionLogReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm("TransactionLogReport", "AdminReports", FormMethod.Post, new { @id = "form1" }))
{


    <section class="section">
        <ul class="breadcrumb breadcrumb-style ">
            <li class="breadcrumb-item">
                <a href="#">
                    <i data-feather="home"></i>
                </a>
            </li>
            <li class="breadcrumb-item">Reports</li>
            <li class="breadcrumb-item">Transaction Log</li>
        </ul>
    </section>

    <div class="section-body">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Transaction Log</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">

                            <div class="input-field col m2 s12">
                                <div class="form-group">
                                    Action
                                    @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control", @Placeholder = "Search by Action" })
                                </div>
                            </div>
                            <div class="input-field col m2 s12">
                                <div class="form-group">
                                    From Date
                                    @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @readonly = "ds" })
                                </div>
                            </div>
                            <div class="input-field col m2 s12">
                                <div class="form-group">
                                    To Date
                                    @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @readonly = "ds" })
                                </div>
                            </div>

                            <div class="input-field col m2 s12">
                                <div class="form-group">
                                    <br />
                                    <input class="btn btn-success" type="submit" value="Search" id="btnSearch" name="Search" />
                                </div>
                            </div>
                        </div>
                        <div class="dt-responsive table-responsive">
                            <table id="basic-btn" class="table table-striped table-bordered nowrap">
                                <thead>
                                    <tr>
                                        <th>S No.</th>
                                        <th>Transaction Date</th>
                                        <th> Action</th>
                                        <th>Transaction By</th>
                                        <th> Remark</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstPlot != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lstPlot)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.FromDate  </td>
                                                    <td>@Item.DisplayName</td>

                                                    <td>@Item.TransactionNumber </td>
                                                    <td>@Item.Remark</td>

                                                </tr>
                                                i++;
                                            }
                                        }
                                    }

                                </tbody>
                                @*<tfoot>
                                    <tr>

                                        <th>S No.</th>

                                        <th>Transaction Date</th>
                                        <th> Action</th>
                                        <th>Transaction By</th>
                                        <th> Remark</th>


                                    </tr>
                                </tfoot>*@
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


}



<script src="~/files/bower_components/jquery/js/jquery.min.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">
<script>

    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeYear: true,
        changeMonth: true,
    });
    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeYear: true,
        changeMonth: true,
    });

</script>



