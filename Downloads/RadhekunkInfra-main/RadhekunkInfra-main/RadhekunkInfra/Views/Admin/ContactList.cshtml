@model RadhekunkInfra.Models.Master

@{
    ViewBag.Title = "ContactList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ContactList", "Admin", FormMethod.Post, new { @id = "form1" }))
{

    <section class="section">
        <ul class="breadcrumb breadcrumb-style ">
            <li class="breadcrumb-item">
                <a href="#">
                    <i data-feather="home"></i>
                </a>
            </li>
            <li class="breadcrumb-item">Admin</li>
            <li class="breadcrumb-item">Contact List</li>
        </ul>
    </section>
    <div class="section-body">
        <div class="card">
            <div class="card-header">
                <h4>Contact List</h4>
                <p style="color: red">
                    @TempData["Contactmsg"]
                </p>
            </div>

            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        @*<div class="card-header table-card-header">
                            <a class="btn btn-primary btn-sm" style="margin-left:76%;margin-top:5px;" href="/Master/BranchMaster">Add New</a>
                        </div>*@
                        <div class="card-block">
                            <table class="table table-bordered table-md" data-page-length='50' id="tableExport" style="width:100%;">
                                <thead>
                                    <tr>
                                        <th>S No.</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Mobile</th>
                                        <th>Address</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstContact != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lstContact)
                                            {
                                                <tr>
                                                    <td>@i</td>
                                                    <td>@Item.Name</td>
                                                    <td>@Item.Email</td>
                                                    <td>@Item.Mobile</td>
                                                    <td>@Item.Address</td>

                                                    <td>
                                                        @*<a href="/Master/BranchMaster?BranchID=@Item.EncryptKey" class="btn btn-info btn-sm">Edit</a>*@
                                                        <a href="/Admin/DeleteContactDetails?id=@Item.Pk_ContactId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this contact details ?');">Delete</a>
                                                    </td>
                                                </tr>
                                                i++;
                                            }


                                        }
                                    }

                                </tbody>

                            </table>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
}


