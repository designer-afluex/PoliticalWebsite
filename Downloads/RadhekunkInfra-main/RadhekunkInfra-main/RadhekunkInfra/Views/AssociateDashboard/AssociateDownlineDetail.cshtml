@model RadhekunkInfra.Models.AssociateBooking

@{
    ViewBag.Title = "AssociateDownlineDetail";
    Layout = "~/Views/Shared/AssociateLayout.cshtml";
}
@using (Html.BeginForm("AssociateDownlineDetail", "AssociateDashboard", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <section class="section">
        <ul class="breadcrumb breadcrumb-style ">
            <li class="breadcrumb-item">
                <a href="#">
                    <i data-feather="home"></i>
                </a>
            </li>
            <li class="breadcrumb-item">Support</li>
            <li class="breadcrumb-item">Associate Downline</li>
        </ul>
    </section>
    <div class="section-body">
        <div class="card">
            <div class="card-header">
                <h4>Associate Downline</h4>
            </div>
            <div class="card-body">
                @Html.HiddenFor(m => m.LoginId, new { @Value = @Model.LoginId })
                <div class="table-responsive">
                    <table class="table table-bordered table-md" data-page-length='50' id="tableExport" style="width:100%;">
                        <thead>
                            <tr>
                                <th>S No.</th>
                                <th>Associate ID</th>
                                <th>Associate Name</th>
                                <th>Rank Name</th>
                                <th>Rank</th>
                                <th>Branch Name</th>
                                <th>Mobile Number</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                if (Model.lstPlot != null)
                                {
                                    int i = 1;
                                    foreach (var Item in Model.lstPlot)
                                    {
                                        <tr class="text-left">
                                            <td>@i</td>
                                            <td>@Item.AssociateID</td>
                                            <td>@Item.AssociateName  </td>
                                            <td>@Item.DesignationName </td>
                                            <td>@Item.Percentage</td>
                                            <td>@Item.BranchName</td>
                                            <td>@Item.Contact</td>

                                        </tr>
                                        i++;
                                    }
                                }
                            }
                        </tbody>

                    </table>
                    </div>
                </div>
            </div>
    </div>
}