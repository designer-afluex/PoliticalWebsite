@model PoliticalWebsite.Models.Master

@{
    ViewBag.Title = "AddNews";
    Layout = "~/Views/Shared/Admin_LayoutPage.cshtml";
}

<body onload="date()">
    @using (Html.BeginForm("AddNews", "Master", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
    {
        <span style="color: red">
            @TempData["msg"]
        </span>
        <br />
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">News Banner</h3>
                        <div class="row mt-4">
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label>News Heading <span style="color: red">*</span></label>
                                    @Html.TextBoxFor(m => m.Discription, new { @placeholder = "News Heading", @class = "form-control" })
                                    @Html.HiddenFor(m => m.NewsID)
                                </div>
                            </div>

                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label>Date <span style="color: red">*</span></label>
                                    <div id="datepicker-popup" class="input-group date datepicker">
                                        @Html.TextBoxFor(m => m.Date, new { @placeholder = "Date", @class = "form-control", @autocomplete = "off" })
                                        <span class="input-group-addon input-group-append border-left">
                                            <span class="mdi mdi-calendar input-group-text"></span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label>News Message <span style="color: red">*</span></label>
                                    @Html.TextBoxFor(m => m.Message, new { @placeholder = "News Heading", @class = "form-control" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            @if (Model != null)
                            {
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label>Upload News Banner </label><br />
                                        <input type="file" id="News" name="News" class="form-control" />
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label>Upload News Banner <span style="color: red">*</span></label><br />
                                        <input type="file" id="News" name="News" class="form-control" />
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="row">
                            <div class="col-lg-9">
                                <div class="form-group">
                                    @Html.HiddenFor(m => m.Pk_NewsId)
                                    @if (Model == null)
                                    {
                                        <input type="submit" id="btnSave" name="btnSave" class="btn btn-success pull-right" value="Save" onclick="return saveNews();" />
                                    }
                                    else
                                    {
                                        <input type="submit" id="btnUpdate" name="btnUpdate" class="btn btn-success pull-right" value="Update" onclick="return updateNews();" />
                                    }
                                    <a href="/Master/NewsimageList" class="btn btn-primary pull-right">News List</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }
</body>
<style>
    .errortext {
        border: 2px solid red !important;
    }
</style>

<link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="stylesheet" type="text/css" />
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.5/jquery.min.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js"></script>
<script type="text/javascript">
    debugger;
    function date() {
        $('#Date').datepicker({
            format: 'dd/mm/yyyy',
            changeYear: true,
            changeMonth: true,
            maxDate: 0
        });
    }

</script>



<script>
    function saveNews() {
        $(".errortext").removeClass("errortext");
        if ($('#Discription').val() == '') {
            $("#Discription").addClass('errortext');
            $('#Discription').focus();
            return false;
        }

        if ($('#Date').val() == '') {
            $("#Date").addClass('errortext');
            $('#Date').focus();
            return false;
        }
        if ($('#Message').val() == '') {
            $("#Message").addClass('errortext');
            $('#Message').focus();
            return false;
        }
        if ($('#News').val() == '') {
            $("#News").addClass('errortext');
            $('#News').focus();
            return false;
        }
    }
</script>







