@model RadhekunkInfra.Models.TraditionalAssociate

@{
    ViewBag.Title = "PrintWelcomeLetter";
    Layout = null;
    //"~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <title>PrintAllotment</title>
    <style>
        table, th, td {
            font-size: medium;
            border: 1px solid black;
            border-collapse: collapse;
        }

        th, td {
            font-size: medium;
            padding: 5px;
        }


        @@media print {     
            #printPageButton {
                display: none;
            }
        }

    </style>

</head>
<body>
    <div style="border: 3px solid #a20e0e;padding: 15px; background: white; color: black;">
        <div class="row">
            <div class="col-md-6 col-lg-6 col-sm-12">
               
                <div class="dashboard1" style="padding-top:14px;">
                    <img src="../../AssociatePanelcss/assets/img/radhekunj.png" class="img-fluid" alt="logo1" style="width:100px;" />
                   
                    <div style="margin-left:85%">
                        <button style="color:#ffffff; text-align:center; background:#a20e0e; padding: 5px; padding-right: 15px;padding-left:15px;" id="printPageButton" onclick="window.print()">Print</button>
                    </div>
                </div>
                @*<div style="margin-left:85%">
                    <button style="color:#a20e0e;" id="printPageButton" class="btn btn-success btn-sm" onclick="window.print()">Print</button>
                </div>*@
                
            </div>
            <div class="col-md-6 col-lg-6 col-sm-12">
               
                @*<div class="dashboard2">
                    <img src="../../AssociatePanelcss/assets/img/blossom.png" class="img-fluid" alt="logo2" />
                </div>*@
            </div>
        </div>
        @*<table style="border: 0px none black;">
            <tr style="border: 0px none black;">
                <td style="border: 0px none black;">
                    <img src="~/AssociatePanelcss/assets/img/radhekunj.png" class="img-fluid" alt="logo1" style="max-width:28%;" />
                </td>
                <td style="border: 0px none black;"></td>
            </tr>
        </table>
        <br />*@
        <table style="border: 0px none black;">
            <tr style="border: 0px none black;">
                <td colspan="2" style="border: 0px none black;">
                    Dear <b>@ViewBag.AssociateName,</b>
                 
                    <br />
                    <p>
                        Welcome to our valued family of @ViewBag.CompanyName ,Thank you
                        for joining hand with us.It is the people like you who make
                        being in business such a pleasure.Our Business is source
                        of Pride to us and with partners like you,we find going to
                        work each day rewarding experience.
                    </p>
                </td>
                @*@if (@ViewBag.ProfilePic == "")

                {
                <td style="border: 0px none black;"><img src="~/images/Customerlogo.png" style="height:130px;width:130px;border: 1px solid black;" /></td>

                }
                else
                {
                    <td style="border: 0px none black;"><img src="@ViewBag.ProfilePic" style="height:130px;width:130px;border: 1px solid black;" /></td>
                }*@

            </tr>

        </table>
        <table style="width: 100%;">
            <tr>
                <td ><b>Associate Id:    </b> </td>
                <td>@ViewBag.AssociateID </td>
                <td><b>Associate Name:    </b>  </td>
                <td>@ViewBag.AssociateName</td>
                <td><b>Mobile     </b></td>
                <td>@ViewBag.Contact</td>
            </tr>

            <tr>
                <td><b>Rank:    </b></td>
                <td>@ViewBag.Designation</td>

                <td><b>City:    </b></td>
                <td>@ViewBag.City</td>
                <td><b>A/C NO.:    </b></td>
                <td>@ViewBag.MemberAccNo</td>
            </tr>
            <tr>

                <td><b>Bank:    </b></td>
                <td>@ViewBag.MemberBankName</td>
                <td><b>Branch:    </b></td>
                <td>@ViewBag.MemberBranch</td>
                <td><b>IFSC Code.:    </b></td>
                <td>@ViewBag.IFSCCode</td>
            </tr>
            <tr>
                <td><b>Address:    </b></td>
                <td colspan="5">@ViewBag.Address</td>

            </tr>
        </table>
        <br />
        <div>
            We value the comments the our partner's on receipt of
            this letter we hope you will share your Vulnerable
            thoughts with us.Please accept our best wishes for your
            continuous prosperity and good health.
            <br />
            <br />
            With Regards,
            <br />

            @ViewBag.CompanyName
        </div>
        <div class="row" style="padding:11px;">
            <h3> Terms & Conditions</h3>
            <p>
                - Any payment received by Customer in Cash or cheque should be
                directly Submitted to the company via cheque or cash in account
                section.
                <br />
                -  Any payment from the customers, should not be taken directly by the
                associate in his account or in cash if so company has no responsibility of
                that payment.
                <br />
                -   Any Misbehaviour with any office staff/customer client or with other
                personal will not be tolerated and will be given Strict Punishment as per
                Govt. rules & regulations.
                <br />
                -  Every applicant should follow dress code decided by the Company, if
                any one found in proper uniform will be subjected to be penalty.
                <br />
                -   All payment of the applicant will be directly transferred to the applicant
                bank account after deducting 5% TDS as per govt. rules & regulations.

                <br />
                I ,<b>@ViewBag.AssociateName</b>, Here by Declare that I have read all terms & conditions of
                the company and I accept all the rules & regulations of the company and I will follow all of them
                and if not, Company is free to take strict action against me.
             
                <br />
                * Attach all the required Documents.
                <br />
             <br />
                <br />
                <div style="width:100%">
                    <div style="float:left;text-align:center; width:33%">
                        Applicant Signature
                    </div>
                    <div style="float:left;text-align:center; width:33%">
                        Associate Signature
                    </div>
                    <div style="float:left;text-align:center; width:33%">
                        Director Signature
                    </div>
                </div>
            </p>

            <br />


        </div>

    </div>
</body>
</html>
