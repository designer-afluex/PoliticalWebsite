@model RadhekunkInfra.Models.AssociateBooking

@{
    ViewBag.Title = "UserReward";
    Layout = "~/Views/Shared/AssociateLayout.cshtml";
}
@using (Html.BeginForm("UserReward", "AssociateDashboard", FormMethod.Post, new { @id = "form1" }))
{
    <section class="section">
        <ul class="breadcrumb breadcrumb-style ">
            <li class="breadcrumb-item">
                <a href="#">
                    <i data-feather="home"></i>
                </a>
            </li>
            <li class="breadcrumb-item">UserReward</li>
            <li class="breadcrumb-item">User Reward</li>
        </ul>
    </section>
    <div class="section-body">
        <div class="card">
            <div class="card-header">
                <h4>User Rewards</h4>
                <p style="color:red">@TempData["Rewardmsg"]</p>
            </div>
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>S No.</th>
                            <th>Reward</th>
                            <th>Status</th>
                            <th>Qualify Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            if (Model.lstPlot != null)
                            {
                                int i = 1;
                                foreach (var Item in Model.lstPlot)
                                {
                                    <tr class="text-left">
                                        <td>@i</td>
                                        <td>
                                            <img src="@Item.RewardImage" height="100" width="100" />
                                            <br />@Item.RewardName
                                        </td>
                                        <td><label class="@Item.Contact">@Item.Status</label></td>
                                        <td>@Item.QualifyDate</td>
                                        <td>
                                            @if (Item.Status == "Achieved")
                                            {
                                                <a class="btn btn-info btn-sm" href="/AssociateDashboard/ClaimReward/@Item.PK_RewardItemId" onclick="return confirm('Are you sure you wish to claim this Award?');">Claim</a>
                                                <a class="btn btn-warning btn-sm" href="/AssociateDashboard/SkipReward/@Item.PK_RewardItemId" onclick="return confirm('Are you sure you wish to Skip this Award?');">Skip</a>
                                            }
                                        </td>
                                    </tr>
                                    i++;
                                }
                            }
                        }

                    </tbody>



                </table>
            </div>
        </div>
    </div>
}
