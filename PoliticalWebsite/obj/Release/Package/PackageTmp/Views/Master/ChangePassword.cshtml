@model PoliticalWebsite.Models.Master

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/Admin_LayoutPage.cshtml";
}



 @using (Html.BeginForm("ChangePassword", "Master", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
    {
        <span style="color: red">
            @TempData["msg"]
        </span>
        <br />
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">Change Password</h3>
                        <div class="row mt-4">
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label>Old Password <span style="color: red">*</span></label>
                                    @Html.TextBoxFor(m => m.OldPassword, new { @placeholder = "Old Password", @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label>New Password <span style="color: red">*</span></label>
                                    @Html.TextBoxFor(m => m.NewPassword, new { @placeholder = "New Password", @class = "form-control" })
                                </div>
                            </div>
                           
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label>Confirm Password <span style="color: red">*</span></label>
                                    @Html.TextBoxFor(m => m.ConfirmPassword, new { @placeholder = "Confirm Password", @class = "form-control", @onchange = "return CheckConfirmPassword();" })
                                </div>
                            </div>
                        </div>
                       
                        <div class="row">
                            <div class="col-lg-9">
                                <div class="form-group">
                                 <input type="submit" id="btnUpdate" name="btnUpdate" class="btn btn-primary pull-right" value="Update Password" onclick="return Validateform();" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }
<style>
    .errortext {
        border: 2px solid red !important;
    }
</style>
<script>
    function Validateform() {
        $("#Old").css({ 'display': '' })
        $(".errortext").removeClass("errortext");

        if ($("#OldPassword").val() == "") {
            $("#OldPassword").addClass('errortext');
            $("#OldPassword").focus();
            return false;
        }
        if ($("#NewPassword").val() == "") {
            $("#NewPassword").addClass('errortext');
            $("#NewPassword").focus();
            return false;
        }
        if ($("#ConfirmPassword").val() == "") {
            $("#ConfirmPassword").addClass('errortext');
            $("#ConfirmPassword").focus();
            return false;
        }
    }
    function CheckConfirmPassword() {
        $(".errortext").removeClass("errortext");
        if ($("#NewPassword").val() != $("#ConfirmPassword").val()) {
            alert("New password and confirm password should be same !");
            $("#NewPassword").addClass("errortext");
            $("#ConfirmPassword").addClass("errortext");
            $("#NewPassword").val("");
            $("#ConfirmPassword").val("");
            $("#NewPassword").focus();
            $("#ConfirmPassword").focus();
        }

    }
</script>







