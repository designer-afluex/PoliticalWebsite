                        </div>


                    </div>


                    <br />*@
                    <div class="dt-responsive table-responsive">
                        <table id="basic-btn" class="table table-striped table-bordered nowrap">
                            <thead>
                                <tr>
                                    <th>Sr No.</th>
                                    <th>LoginId</th>
                                    <th>Name</th>
                                    <th>Receipt No</th>
                                    <th>Due Date</th>
                                    <th>PaymentDate</th>
                                    <th>Due Amount</th>
                                    <th>Paid Amt</th>
                                    <th>Status</th>
                                    <th>Payment Mode</th>
                                    <th>Bank Details</th>

                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    if (Model.lstassociate != null)
                                    {
                                        int i = 1;
                                        foreach (var Item in Model.lstassociate)
                                        {
                                            if (Item.Status == "Paid")
                                            {
                                                <tr class="text-left" style="background-color: #91d491;">
                                                    <td>@i</td>
                                                    <td>@Item.LoginId</td>
                                                    <td>@Item.DisplayName</td>
                                                    <td>@Item.ReceiptNo</td>
                                                    <td>@Item.DueDate</td>
                                                    <td>@Item.PaymentDate</td>
                                                    <td>@Item.InstAmt</td>
                                                    <td>@Item.PaidAmount</td>
                                                    <td>@Item.Status</td>
                                                    <td>@Item.PaymentMode</td>
                                                    <td>TxnNo: @Item.TransactionNo TxnDate: @Item.TransactionDate Branch: @Item.BankBranch Bank: @Item.BankName  </td>

                                                </tr>
                                            }
                                            else
                                            {
                                                <tr class="text-left" style="background-color:#a75e5e">
                                                    <td>@i</td>
                                                    <td>@Item.LoginId</td>
                                                    <td>@Item.DisplayName</td>
                                                    <td>@Item.ReceiptNo</td>
                                                    <td>@Item.DueDate</td>
                                                    <td>@Item.PaymentDate</td>
                                                    <td>@Item.InstAmt</td>
                                                    <td>@Item.PaidAmount</td>
                                                    <td>@Item.Status</td>
                                                    <td>@Item.PaymentMode</td>
                                                    <td><b><u> TxnNo:</u></b> @Item.TransactionNo <b><u> TxnDate:</u></b> @Item.TransactionDate <b><u> Branch:</u></b> @Item.BankBranch  <b><u> Bank:</u></b> @Item.BankName  </td>

                                                </tr>
                                            }
                                            i++;
                                        }

                                    }
                                }
                            </tbody>


                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


}


