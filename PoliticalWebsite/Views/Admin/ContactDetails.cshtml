@model PoliticalWebsite.Models.Admin

@{
    ViewBag.Title = "ContactDetails";
    Layout = "~/Views/Shared/Admin_LayoutPage.cshtml";
}

<form action="/Admin/ContactList" id="form1" method="post">
    <p style="color: red">
        <span style="color:red">@TempData["msg"]</span>
    </p>
    <div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="page-header-title">
                        <h4 class="m-b-10">Contact List</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">
                <div class="page-body">
                    <div class="row">
                        <div class="col-md-12">
                            <!-- HTML5 Export Buttons table start -->
                            <div class="card">
                                <div class="card-header table-card-header">
                                    <p style="color: red">

                                    </p>
                                    @*<a class="btn btn-primary btn-sm" style="margin-left:76%" href="/Home/Contact">Add Contact</a>*@
                                </div>
                                <div class="card-block">
                                    <div class="dt-responsive table-responsive">
                                        <table id="basic-btn" class="table table-striped table-bordered nowrap" width="100%">
                                            <thead>
                                                <tr>
                                                    <th>S No.</th>
                                                    <th>Name</th>
                                                    <th>Mobile</th>
                                                    <th>Email</th>
                                                    <th>Subject</th>
                                                    <th>Message</th>
                                                    @*<th>Action</th>*@
                                                </tr>

                                            </thead>
                                            <tbody>
                                                @if (Model != null)
                                                {
                                                    if (Model.lstcontact != null)
                                                    {
                                                        int i = 1;
                                                        foreach (var Item in Model.lstcontact)
                                                        {
                                                            <tr>
                                                                <td>@i</td>
                                                                <td>@Item.Name</td>
                                                                <td>@Item.Mobile</td>
                                                                <td>@Item.Email</td>
                                                                <td>@Item.Subject</td>
                                                                <td>@Item.Message</td>
                                                                @*<td>
                                                                    <a class="btn btn-sm btn-info" href="#?Id=@Item.Pk_ContactId">Edit</a>
                                                                    <a class="btn btn-sm btn-danger" href="#?Id=@Item.Pk_ContactId" onclick="return confirm('Are you sure you want to delete this contact detail ?')">Delete</a>
                                                                </td>*@
                                                                <td></td>
                                                            </tr>
                                                            i = i + 1;
                                                        }
                                                    }
                                                }
                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <th></th>
                                                    <th></th>
                                                    <th></th>
                                                    <th></th>
                                                    <th></th>
                                                    <th></th>
                                                    <th></th>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

