@{
    Layout = "~/Views/Shared/WebsiteLayout.cshtml";
}

<main>
    <div class="filter-bar filter-bar-2 primary-bg text-white">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    <h3 class="text-white text-center">Request Form</h3>
                </div>
            </div>
        </div>
    </div>
    <div class="container pri-pad">
        <div class="row">
            <div class="col-md-6">
                <form action="#" class="property-submit">
                    <div class="row">
                        <div class="form-group col-sm-6">
                            <label>Name</label>
                            <input type="text">
                        </div>

                        <div class="form-group select col-sm-6 mb-30">
                            <label>Mobile No.</label>
                            <input type="number">
                        </div>
                        <!--status-->

                        <div class="form-group col-sm-6 mb-30">
                            <label>Email Address</label>
                            <input type="email">
                        </div>

                        <div class="form-group select col-sm-6 mb-30">
                            <label>Work Experience</label>
                            <select name="experience">
                                <option value="1 Year">Select Work Experience</option>
                                <option value="1 Year">1 Year</option>
                                <option value="2 Year">2 Year</option>
                                <option value="3 Year">3 Year</option>
                                <option value="4 Year">4 Year </option>
                                <option value="5 Year">5 Year</option>
                                <option value=" Year">6 Year</option>
                                <option value="7 Year">7 Year</option>
                            </select>
                        </div>
                    </div>

                    <div class="row mb-30">
                        <div class="form-group col-sm-12 mb-30">
                            <label>Address</label>
                            <textarea></textarea>
                        </div>
                    </div>

                    <a href="#" class="btn btn-sucess btn-lg shadow faa-parent animated-hover">
                        Submit <i class="fa fa-long-arrow-right faa-passing"></i>
                    </a>
                </form>
            </div>
            <div class="col-md-6">
                <img src="~/WebsiteCss/assets/images/1.jpg"/>
            </div>
        </div>
    </div>
</main>
