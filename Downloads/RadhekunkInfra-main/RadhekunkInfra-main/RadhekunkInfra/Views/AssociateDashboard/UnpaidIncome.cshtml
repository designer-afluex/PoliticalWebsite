@model RadhekunkInfra.Models.AssociateBooking

@{
    ViewBag.Title = "UnpaidIncome";
    Layout = "~/Views/Shared/AssociateLayout.cshtml";
}
@using (Html.BeginForm("UnpaidIncome", "AssociateDashboard", FormMethod.Post, new { @id = "form1" }))
{
<section class="section">
    <ul class="breadcrumb breadcrumb-style ">
        <li class="breadcrumb-item">
            <a href="#">
                <i data-feather="home"></i>
            </a>
        </li>
        <li class="breadcrumb-item">Support</li>
        <li class="breadcrumb-item">Unpaid Income Report</li>
    </ul>
</section>
<div class="section-body">
    <div class="col-12 col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4>Unpaid Income Report</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-6 col-md-4 col-lg-4">
                        <div class="form-group">
                            <label>From ID</label>
                            @Html.TextBoxFor(m => m.FromID, new { @class = "form-control", @Placeholder = "Search by FromID" })
                        </div>
                    </div>
                    <div class="col-6 col-md-4 col-lg-4">
                        <div class="form-group">
                            <label> To ID</label>
                            @Html.TextBoxFor(m => m.ToID, new { @class = "form-control", @Placeholder = "Search by To ID" })
                        </div>
                    </div>
                    <div class="col-6 col-md-4 col-lg-4">
                        <div class="form-group">
                            <label>From Date</label>
                            @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @readonly = "ds" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6 col-md-4 col-lg-4">
                        <div class="form-group">
                            <label> To Date</label>
                            @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @readonly = "ds" })
                        </div>
                    </div>
                    <div class="col-12 col-md-4 col-lg-4">
                        <div class="form-group">
                            <br />

                            <input class="btn btn-primary mr-1" type="submit" value="Search" id="btnSearch" name="Search" />
                        </div>
                    </div>
                </div>
                <table id="basic-btn" class="table table-striped">
                    <thead>
                        <tr>
                            <th>S No.</th>
                            <th>Cosing Date</th>
                            <th>From ID</th>
                            <th>From Name</th>
                            <th>To ID</th>
                            <th>To Name</th>
                            <th>Business Amount</th>
                            <th>Difference Percentage</th>
                            <th>Income</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            if (Model.lstPlot != null)
                            {
                                int i = 1;
                                foreach (var Item in Model.lstPlot)
                                {
                                    <tr class="text-left">
                                        <td>@i</td>
                                        <td>@Item.FromDate</td>
                                        <td>@Item.FromID</td>
                                        <td>@Item.FromName</td>
                                        <td>@Item.ToID</td>
                                        <td>@Item.ToName</td>
                                        <td>@Item.Amount</td>
                                        <td>@Item.DifferencePercentage</td>
                                        <td>@Item.Income</td>

                                    </tr>

                                    i++;
                                }
                            }
                        }

                    </tbody>



                </table>
            </div>

        </div>
    </div>
</div>
}
<script src="~/files/bower_components/jquery/js/jquery.min.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">
<script>

    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeYear: true,
        changeMonth: true,
    });
    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeYear: true,
        changeMonth: true,
    });

</script>